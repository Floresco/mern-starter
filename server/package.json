{
  "name": "server",
  "version": "1.0.0",
  "description": "Server for MERN starter",
  "scripts": {
    "client-build": "cd ../client npm run clean && npm run build",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel -d ./build ./src/bin/www.js -s",
    "build": "npm run clean && npm run client-build && npm run build-babel",
    "start": "npm run build && node ./build/www.js",
    "dev-start": "nodemon --exec babel-node ./src/bin/www.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "codeagni",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.8.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/node": "^7.7.4",
    "@babel/preset-env": "^7.7.6",
    "@babel/register": "^7.7.4",
    "babel-loader": "^8.0.6",
    "nodemon": "^2.0.2"
  }
}
